{
  "compilerOptions": {
    "target": "ES2019",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": false,
    "sourceMap": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "outDir": "dist"
  },
  "include": ["src"]
}
